{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/mercadoPagoWebhook", "dest": "api/mercadoPagoWebhook.js" },
    { "src": "/api/checkout", "dest": "api/checkout.js" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
